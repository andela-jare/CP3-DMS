{
  "name": "dms",
  "version": "1.0.0",
  "description": "Document management system",
  "main": "server.js",
  "scripts": {
    "build": "rimraf dist/ && babel --copy-files ./ --out-dir dist/ --ignore ./node_modules,./server/tests,./coverage",
    "start": "npm run build && node dist/server.js",
    "start:dev": "nodemon server.js --exec babel-node",
    "seed": "NODE_ENV=test ./node_modules/.bin/babel-node server/tests/helpers/seedHelper.js",
    "migrate": "sequelize db:migrate",
    "mocha": "mocha --compilers js:babel-core/register server/tests",
    "test": "NODE_ENV=test npm run seed && rm -rf coverage/ && NODE_ENV=test babel-node ./node_modules/babel-istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha -- -R spec server/tests",
    "test:watch": "npm run test -- --watch",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "lint": "node_modules/.bin/esw",
    "lint:watch": "npm run lint -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela-jare/CP3-DMS.git"
  },
  "author": "Jorg Are",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andela-jare/CP3-DMS/issues"
  },
  "homepage": "https://github.com/andela-jare/CP3-DMS#readme",
  "devDependencies": {
    "Faker": "^0.7.2",
    "coveralls": "*",
    "eslint": "^3.15.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-watch": "^3.0.0",
    "expect": "^1.20.2",
    "faker": "^3.1.0",
    "fm-log": "^4.4.3",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.2.0",
    "should": "^11.2.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-istanbul": "^0.12.1",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.22.0",
    "babelify": "^7.3.0",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.16.0",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "jsonwebtoken": "^7.2.1",
    "morgan": "^1.8.0",
    "pg": "^6.1.2",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.30.2",
    "sequelize-cli": "^2.5.1"
  }
}
